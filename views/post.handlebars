
<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{body}}</p>
  <p>Created by {{user.name}} on {{format_date createdAt}}</p>

  <div class="col-md-6">
    <h4>Comments:</h3>
    {{#each comments}}
    <div>
      <p>{{user.name}}: {{comment_text}}</p>
    </div>
    {{/each}}
  </div>


  <div class="text-center col-md-6">
    <h5>Comment on this Post:</h5>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-text"></label>
        <input class="form-input" type="text" id="comment-text" name="comment-text" />
      </div>
      <div class="form-group">
        <button type="submit" id="submit_btn" class="btn btn-primary">Submit Comment</button>
      </div>
    </form>
  </div>

</div>


<script src="./js/comment.js"></script>
